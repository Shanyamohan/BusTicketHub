@model BusTicketHub.Models.Login;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;

            justify-content: center;
            align-items: center;
            height: 100vh;
            color:white;
            margin: 0;
            background-image: url("https://i.pinimg.com/originals/e0/a3/59/e0a3594b15d48f42350edb18b35f97f6.gif");
            background-size:cover;
        }

        .form1 {
            display: grid;
            grid-template-rows: auto auto auto;
            gap: 20px;
           
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px white;
            ;
        }

            .form1 h1 {
                margin: 0;
                font-size: 24px;
                text-align: center;
            }

        .email, .password {
            padding: 10px;
            border-radius: 4px;
            Margin: 20px;
        }

        .password {
        }

        input[type="text"] {
            width: 90%;
            padding: 8px;
            margin: 5px;
            border: 4px solid 
            border-radius: 4px;
            height: 30px;
            background-color:transparent;
            color:white;
        }

            input[type="text"] :hover {
                border:3px solid white;
                color:white;
            }

        .button1 {
            text-align: center;
            color: black;
        }

        .submit {
            padding: 10px 20px;
            background-color: aliceblue;
            border: none;
            color: black;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            color: black
        }

            .submit:hover {
                width: 110px;
                height: 50px;
                color: black;
               font-weight:bolder;
            }
    </style>
</head>
<body>
    <div class="form1">
        <h1>LOG IN</h1>
        <form asp-action="LoginVarifcation" method="post">
            <div class="email">
               Phone Number:
                <input type="text" class="phone" placeholder="Enter your phone" asp-for="phone">

            </div>
            <div class="password">
                Password:
                <input type="text" class="password" placeholder="Enter your password" asp-for="password">
            </div>
            <div class="button1">
                <button type="submit" class="submit">Login</button>
            </div>
        </form>
    </div>
</body>
</html>