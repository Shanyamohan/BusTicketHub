@model Demo2.Models.Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <style>
        /* styles.css */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            font-size: 18px;
            font-weight: normal;
            overflow: hidden; /* Prevents scrolling */
            color: #333; /* Neutral text color */
            color: white;
        }

        .bg-img {
            background-image: url("https://t3.ftcdn.net/jpg/07/80/28/02/360_F_780280283_px55r99HxNSvCdLgm8dtw3otS8L5KMZw.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            position: fixed; /* Ensures it covers the viewport */
            width: 100%;
            z-index: -1; /* Place it behind other content */
            filter: blur(5px);
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100%;
            padding: 20px;
        }

        .Register {
           /* Background for the form */
            border-radius: 10px; /* Rounded corners */
            border: 4px solid  darkgoldenrod;
             /* Light border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 30px 30px 30px 30px;
            border:20px;
            width: 100%;
            max-width: 800px; /* Maximum width for the form */
            text-align: left; /* Align text to the left */
            
        }

            .Register h1 {
                margin-top: 0;
                font-size: 24px;
                margin-bottom: 20px;
            }

            .Register label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
            }

        input {
            width: calc(100% - 20px);
            height: 30px;
           
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-size: 16px;
        }

            input:hover {
                border-color: #999;
                cursor: pointer;
            }

            input:focus {
                border-color: whitesmoke;
                background-color: #f0f8ff;
                outline: none;
            }

        .animated-button {
            background-color: darkgoldenrod;
            color: black;
          
            border-radius: 5px;
            padding: 15px 25px;
            font-size: 16px;
            cursor: pointer;
            outline: none;
            transition: transform 0.3s ease, background-color 0.3s ease;
            display: block;
            width: 100%;
        }

            .animated-button:hover {
                background-color: darkgoldenrod;
                transform: scale(1.05);
            }

            .animated-button:active {
                background-color: darkgoldenrod;
                transform: scale(1);
            }
    </style>
</head>
<body>
    <div class="bg-img"></div>
    <div class="container">
        <div class="Register">
            <center> <h1>Register</h1></center>
           
            <form asp-controller="Home" asp-action="Index1" method="post">
                <label for="name">Name:</label>
                <input type="text" id="name" asp-for="name" /><br />

                <label for="email">Email ID:</label>
                <input type="email" id="email" asp-for="email" /><br />

                <label for="phone">Phone Number:</label>
                <input type="text" id="phone" asp-for="phone" /><br />

                <label for="password">Password:</label>
                <input type="password" id="password" asp-for="password" /><br />
                <br /><br />
                <button type="submit" class="animated-button">Register</button>
            </form>
        </div>
    </div>
</body>
</html>
